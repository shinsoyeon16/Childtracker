<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/border_bottom">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/main_btn_menu"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:backgroundTint="#FFCC66"
            android:src="@drawable/menu" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/border_bottom">
        <ImageButton
            android:id="@+id/main_btn_prev"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFCC66"
            android:scaleType="fitXY"
            android:src="@drawable/prev" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="3">
            <ImageButton
                android:id="@+id/main_btn_selectdate"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:backgroundTint="#FFCC66"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:src="@drawable/selectdate" />
            <TextView
                android:id="@+id/main_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textColor="#2B2B2B"
                android:textSize="25sp" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/main_btn_next"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:backgroundTint="#FFCC66"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:src="@drawable/next" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/main_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>